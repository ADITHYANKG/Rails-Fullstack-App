<div class="bg-gradient-to-r from-black  to-red-900  text-white text-center py-20 shadow w-full">
    <h1 class=" text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Let's Shop Here</h1>
    <p class=" text-lg sm:text-lg md:text-xl lg:text-2xl mb-8">Your one-stop for all your e-commerce needs!</p>
    <%= link_to "Shop Now", root_path, class: "bg-gray-800 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded transition" %>
</div>

<div class="w-full bg-white px-6 mt-8">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Shop by Category</h2>
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% @main_categories.each do |category| %>
            <%= link_to category_path(category), class: "block" do %>
              <div class="bg-white shadow-md rounded-lg overflow-hidden transform hover:scale-105 transition duration-300 h-48 sm:h-56 md:h-64 lg:h-72 xl:h-80">
    <div class="w-full h-3/4 flex items-center justify-center overflow-hidden">
        <%= category.image.present? ? image_tag(category.image, class: "w-full h-full object-cover") : image_tag("http://via.placeholder.com/512", class: "w-full h-full object-cover") %>
    </div>
    <div class="h-1/4 p-4 text-center flex items-center justify-center">
        <h2 class=" text-xs sm:text-sm md:text-base lg:text-lg font-semibold text-gray-900"><%= category.name %></h2>
    </div>
</div>  

            <% end %>
        <% end %>
    </div>
</div>

<div class="bg-gray-100 py-20 my-10 w-full">
    <div class="px-6">
        <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Customer Testimonials</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% 3.times do %>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <p class="text-gray-800 text-base mb-4">"I've been shopping on Ecomm for years and it's always been a fantastic experience."</p>
                    <p class="text-gray-500 text-xs">- Adithyan</p>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="bg-black text-white my-10 text-center py-20 w-full">
    <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
    <p class="mb-8">Subscribe to our newsletter for the latest updates and offers</p>
    <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
        <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "py-2 px-4 rounded-l text-gray-800 w-64" %>
        <%= submit_tag "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
    <% end %>
</div>
