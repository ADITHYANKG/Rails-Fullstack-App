<div class="min-h-screen bg-gray-100 py-10 px-4 sm:px-6 lg:px-8">
  <h2 class="text-3xl sm:text-4xl font-bold text-center text-gray-900 mb-8">Your Orders</h2>
  <% if @orders.any? %>
    <div class="max-w-5xl mx-auto bg-white shadow-lg rounded-lg p-6">
      <% @orders.each do |order| %>
        <div class="border-b border-gray-300 py-6">
          <p class="text-xl font-semibold text-gray-800">Order ID: 25786472<%= order.id %></p>
          <p class="text-gray-600 text-sm">Placed on: <%= order.created_at.strftime("%d %b %Y, %I:%M %p") %></p>
          <p class="text-gray-700 font-medium mt-2">Total Amount: Rs. <%= order.total %></p>
          <p class="text-gray-700">Address: <%= order.address %></p>
          <h3 class="font-bold text-lg text-gray-900 mt-4">Products:</h3>
          <div class="mt-3 space-y-4">
            <% order.order_products.each do |item| %>
              <div class="flex items-center gap-4 p-4 bg-gray-50 rounded-lg shadow-sm ">
                <div class="flex-shrink-0 w-24 sm:w-28 md:w-32 lg:w-36 h-24 sm:h-28 md:h-32 lg:h-36 bg-white rounded-lg p-2 shadow">
                  <img src="<%= item.product.images.attached? ? url_for(item.product.images.first) : 'https://via.placeholder.com/150' %>" 
                       alt="Product Image" 
                       class="w-full h-full object-contain">
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-gray-800 text-base sm:text-lg md:text-xl"><%= item.product.name %></p>
                  <p class="text-gray-600 text-sm sm:text-base md:text-lg">Size: <%= item.size %> | Quantity: <%= item.quantity %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center text-gray-500 text-lg mt-6">You have no orders yet.</p>
  <% end %>
</div>
