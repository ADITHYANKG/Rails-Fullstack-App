<div class="min-h-screen flex  flex-col items-center justify-center bg-gray-100 px-4 sm:px-6 lg:px-8">
   <p class="text-lg sm:text-xl md:text-2l lg:text-4xl text-dark font-bold ">Looks like you're new here!</p>
  <br>
  <br>
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-900">Create an Account</h2>
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-6 space-y-4") do |f| %>
      
      <!-- Full Name -->
      <div>
        <%= f.label :name, "Full Name", class: "block text-gray-700 font-medium" %>
        <%= f.text_field :name, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:outline-none" %>
      </div>

      <!-- Email -->
      <div>
        <%= f.label :email, "Email Address", class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:outline-none" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, "Password", class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:outline-none" %>
      </div>

      <!-- Confirm Password -->
      <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password_confirmation, required: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:outline-none" %>
      </div>
       <br>
      <!-- Sign Up Button -->
      <div>
        <%= f.submit "Sign Up", class: "w-full bg-gray-900 hover:bg-gray-800 text-white py-3 rounded-lg font-medium transition duration-300" %>
      </div>

    <% end %>

    <!-- Sign In Link -->
    <p class="mt-4 text-center text-gray-700">
      Already have an account?
      <%= link_to "Sign In", new_user_session_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
    </p>
  </div>
</div>
