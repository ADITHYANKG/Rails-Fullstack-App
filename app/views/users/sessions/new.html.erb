<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 px-4 sm:px-6 lg:px-8">
  <p class="text-sm sm:text-lg md:text-xl lg:text-2xl text-dark font-bold ">Get access to your Orders, Wishlist and Recommendations</p>
  <br>
  <br>
  <div class="w-full max-w-md bg-white shadow-xl rounded-2xl p-8">
    <h2 class="text-3xl sm:text-4xl font-bold text-center text-gray-900">Login</h2>
    <p class="text-center text-gray-500 mt-2">Sign in to continue</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "mt-6 space-y-6") do |f| %>
      
      <!-- Email Field -->
      <div class="space-y-2">
        <%= f.label :email, "Email Address", class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, required: true, class: "w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-gray-900 focus:outline-none" %>
      </div>

      <!-- Password Field -->
      <div class="space-y-2">
        <%= f.label :password, "Password", class: "block text-gray-700 font-medium" %>
        <%= f.password_field :password, required: true, class: "w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-gray-900 focus:outline-none" %>
      </div>
      <br>
      <!-- Sign In Button -->
      <div>
        <%= f.submit "Sign In", class: "w-full bg-gray-900 hover:bg-gray-800 text-white py-3 rounded-lg font-semibold transition duration-300 shadow-md" %>
      </div>

    <% end %>

    <!-- Forgot Password & Sign Up Link -->
    <div class="mt-6 text-center space-y-3">
     
      <p class="text-gray-600">
        Don't have an account? 
        <%= link_to "Sign Up", new_user_registration_path, class: "text-blue-600 hover:text-blue-500 font-medium" %>
      </p>
    </div>
  </div>
</div>
